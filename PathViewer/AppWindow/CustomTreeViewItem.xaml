<TreeViewItem x:Class="PathViewer.AppWindow.CustomTreeViewItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PathViewer.AppWindow"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <TreeViewItem.Header>
        <DockPanel>
            <Image x:Name="ItemImage" DockPanel.Dock="Left" Margin="5" Height="18" Width="18"/>
            <TextBlock x:Name="ItemLabel" Margin="5" FontFamily="Century Gothic" FontSize="12"/>
        </DockPanel>
    </TreeViewItem.Header>
</TreeViewItem>
